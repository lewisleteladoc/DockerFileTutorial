FROM node:19-alpine

# Copy package.json, wildcard used so both package.json AND package-lock.json are copied
# slash '/' at the end of app is important, so it created an app directory (1), otherwise you'll get an error
COPY package*.json /usr/app/

# Copy app files from src directory
COPY src /usr/app/

# Create app directory & set default dir(from (1) above) so that next commands executes in /usr/app dir, liked cd-ing into /usr/app to execute npm install
WORKDIR /usr/app

# Install app dependencies
RUN npm install

# 4. Copy the rest of your application code
COPY . .

EXPOSE 3000

# 6. Start the "galaxy" script automatically
CMD ["npm", "run", "galaxy"]